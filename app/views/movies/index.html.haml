-#  This file is app/views/movies/index.html.haml
%h1 All Movies
"#{params[:sortedby]}"
%table#movies
  %thead
    %tr 
      %th{ :class => ("title" == params[:sortedby]) ? 'hilite' : "" }= link_to "Movie Title", { :controller => "movies" , :action => "index",  :query => "title"} , :id => "title_header"
      %th Rating
      %th{ :class => ("date" == params[:sortedby]) ? 'hilite' : ""}= link_to "Release Date", { :controller => "movies" , :action => "index",  :query => "date"} , :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path




